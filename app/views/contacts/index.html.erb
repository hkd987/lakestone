<h1 class="heading text-center">Try Again
  <span class="text-muted text-center"> Something Went Wrong</span>
</h1>

<div class="container text-center">
  <%= render 'layouts/contactalert' %>
</div>

<% if cookies[:saved_contact] %>
  <h4 class="text-center"> Thanks for contacting us. We will get back to you soon. </h4>
<% else %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <%= bootstrap_form_for(@contact, layout: :horizontal) do |f| %>
        <%= f.text_field :name, hide_label: true, placeholder: "Name" %>
        <%= f.email_field :email, hide_label: true, placeholder: "Your Email" %>
        <%= f.phone_field :phone, hide_label: true, placeholder: "Phone Number" %>
        <%= f.text_area :notes, hide_label: true, placeholder: "Notes Go Here" %>
        <%= f.primary "Submit" %>
      <% end %>
      <% end %>
  </div>
  </div>
  </div>
