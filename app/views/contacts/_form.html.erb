<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary btn-lg", :name => "Drop A Line" %>
  </div>
<% end %>
