<div class="newsletter">
<h1 class="heading text-center">Newsletter
  <span class="text-muted text-center">Sign Up Now</span>
</h1>


<div class="container text-center">
  <%= render 'layouts/messages' %>
</div>

<% if cookies[:saved_lead] %>
  <h4 class="text-center"> Thanks for signing up! </h4>
<% else %>
  <div class="row">
    <div class="col-md-12 text-center">
      <%= bootstrap_form_for(@lead, layout: :inline) do |f| %>
        <%= f.text_field :name, hide_label: true, placeholder: "Name" %>
        <%= f.email_field :email, hide_label: true, placeholder: "Your Email" %>
        <%= f.primary "Submit" %>
      <% end %>
      <% end %>
  </div>
  </div>
  </div>
